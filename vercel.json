{
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/cart/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/cart",
      "destination": "/backend/server.js"
    },
    {
      "source": "/order/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/order",
      "destination": "/backend/server.js"
    },
    {
      "source": "/product/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/product",
      "destination": "/backend/server.js"
    },
    {
      "source": "/user/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/user",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}
